{
  "editor.fontSize": 11,
  "editor.fontFamily": "Monoid",
  "editor.fontLigatures": true,

  "python.pythonPath": "venv/bin/python",
  "python.autoComplete.extraPaths": ["${workspaceFolder}"],
  "python.formatting.provider": "yapf",
  "python.linting.pylintEnabled": false,

  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/__pycache__": true
  }
}
